<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BK  </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BK.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header style="background-color:blue; color:whitesmoke;font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;">
        <nav style="background-color:blue;">

                    <ul>
                        
                        <a asp-area="" asp-controller="Home" asp-action="Feed" style="font-size:30px; color:greenyellow; border:3px;">BK</a>
                        @if (Context.Session.GetString("LoggedUser") != null)
                        {
                            
                    <a asp-controller="Profile" asp-action="Index" style="color:whitesmoke"> <i class="bi bi-person-circle"></i>Мой профиль</a>
                    <a asp-controller="Home" asp-action="Feed" style="color:whitesmoke"><i class="bi bi-house-door"></i>Главная</a>
                        }
                        else
                        {
                    <a asp-controller="Account" asp-action="Login" style="color:whitesmoke"> <i class="bi bi-box-arrow-in-right"></i>Войти</a>
                    <a asp-controller="Account" asp-action="Register" style="color:whitesmoke"> <i class="bi bi-person-plus"></i>Регистрация</a>
                        }
                    </ul>
               
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3" style="text-align: center; font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - BK - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
