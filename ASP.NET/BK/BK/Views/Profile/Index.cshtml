<h2>Моя страница</h2>

<h3>@ViewBag.Name</h3>
<p><b>Статус:</b> @ViewBag.Status</p>
<p><b>Город:</b> @ViewBag.City</p>
<p><b>О себе:</b> @ViewBag.About</p>

<hr />

<h4>Редактировать</h4>

<form method="post" asp-action="Save">
    <div>Имя: <input name="name" value="@ViewBag.Name" /></div>
    <div>Статус: <input name="status" value="@ViewBag.Status" /></div>
    <div>Город: <input name="city" value="@ViewBag.City" /></div>
    <div>О себе:<br><textarea name="about" rows="4" cols="50">@ViewBag.About</textarea></div>
    <button type="submit">Сохранить</button>
</form>

<p><a asp-controller="Home" asp-action="Feed">Лента</a></p>